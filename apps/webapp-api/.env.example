# webapp-api Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE - Primary tenant database
# ===========================================
DB_HOST=
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_SSLMODE=require

# Suffix added to tenant subdomain for database name
# e.g., tenant "mygym" -> database "mygym_db"
TENANT_DB_SUFFIX=_db

# ===========================================
# ADMIN DATABASE - For tenant lookups
# ===========================================
ADMIN_DB_HOST=
ADMIN_DB_NAME=ironhub_admin
ADMIN_DB_USER=
ADMIN_DB_PASSWORD=
ADMIN_DB_SSLMODE=require

# ===========================================
# STORAGE - Backblaze B2 + Cloudflare CDN
# ===========================================
B2_KEY_ID=
B2_APP_KEY=
B2_BUCKET_NAME=
B2_BUCKET_ID=

# CDN URL for serving files
CLOUDFLARE_CDN_URL=https://cdn.ironhub.motiona.xyz

# ===========================================
# SECURITY
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=

# Preview signatures for Excel export
WEBAPP_PREVIEW_SECRET=

# ===========================================
# OPTIONAL
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Timezone
TZ=America/Argentina/Buenos_Aires

# ===========================================
# META / WHATSAPP (Embedded Signup BYOC)
# ===========================================
META_APP_ID=25671171339243486
META_APP_SECRET=
META_GRAPH_API_VERSION=v19.0
META_WA_EMBEDDED_SIGNUP_CONFIG_ID=
META_OAUTH_REDIRECT_URI=
WHATSAPP_TEMPLATE_LANGUAGE=es_AR
WABA_ENCRYPTION_KEY=
