{
    "version": 2,
    "builds": [
        {
            "src": "src/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.11",
                "includeFiles": [
                    "assets/**",
                    "alembic.ini",
                    "alembic/**",
                    "alembic_admin.ini",
                    "alembic_admin/**",
                    "src/templates/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.py"
        }
    ]
}
