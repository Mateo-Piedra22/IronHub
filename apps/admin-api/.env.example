# admin-api Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# ADMIN DATABASE
# ===========================================
ADMIN_DB_HOST=
ADMIN_DB_PORT=5432
ADMIN_DB_NAME=ironhub_admin
ADMIN_DB_USER=
ADMIN_DB_PASSWORD=
ADMIN_DB_SSLMODE=require

# ===========================================
# SECURITY
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=

# Admin panel password (hashed on first use)
ADMIN_PASSWORD=

# ===========================================
# OPTIONAL
# ===========================================
LOG_LEVEL=INFO
TZ=America/Argentina/Buenos_Aires

# ===========================================
# BOOTSTRAP PERFORMANCE
# ===========================================
# Set to 0 to skip ANALYZE on bootstrap (useful if re-provisioning huge tenants)
ADMIN_DB_ANALYZE_ON_BOOTSTRAP=1
TENANT_DB_ANALYZE_ON_BOOTSTRAP=1
